# === Multi-Agent Model Assignments ===
# Strategic agent: cross-zone reasoning
STRATEGIC_MODEL=llama3.1:latest
# Per-zone coordinator agents
ZONE1_MODEL=granite4:latest
ZONE2_MODEL=qwen2.5:latest
ZONE3_MODEL=llama3.2:latest
# Safety guardian: validates actuator commands
GUARDIAN_MODEL=llama-guard3:latest
# Fallback / general
LLM_MODEL=llama3.1:latest

# === LLM Connection ===
LLM_API_KEY=ollama
LLM_BASE_URL=http://localhost:11434
LLM_CONTEXT_WINDOW=8192

# === MQTT Broker (EMQX) ===
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883

# === InfluxDB ===
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=mcp-dev-token
INFLUXDB_ORG=mcp-org
INFLUXDB_BUCKET=power_grid

# === MCP Registry ===
REGISTRY_HOST=localhost
REGISTRY_PORT=8000

# === Monitoring ===
MONITOR_INTERVAL_SECONDS=5
